<resources>
    <!-- Base application theme. -->
    <style name="Theme.Candle" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/pink_light</item>
        <item name="colorPrimaryVariant">@color/grey</item>
        <item name="colorOnPrimary">@color/grey</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/grey_mild</item>
        <item name="colorSecondaryVariant">@color/pink</item>
        <item name="colorOnSecondary">@color/pink</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/red_candle</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Candle.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Candle.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Candle.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>